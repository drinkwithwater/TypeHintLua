
const DotsTail = require "thlua.tuple.DotsTail"

(@do
	let.clazz = import("thlua.type.TypeClass").clazz
	clazz.FixedTermTuple = clazz.TermTuple
end)

const TermTuple = {}

TermTuple.__index=TermTuple
TermTuple.__tostring=function(self:clazz.FixedTermTuple):Ret(String)
	const re:List(String) = {}
	for i=1, #self do
		re[i] = tostring(self._list[i])
	end
	const nTail = self._tail
	if nTail then
		re[#re + 1] = tostring(nTail) .."*"
	end
	return "TermTuple("..table.concat(re, ",")..")"
end

TermTuple.__len=function(self:clazz.FixedTermTuple)
	return #self._list
end

function:class(clazz.TermTuple) TermTuple.new(vContext:clazz.Context, vTermList:List(clazz.RefineTerm), vTail:OrFalse(clazz.DotsTail), vTypeTuple:OrFalse(clazz.UTypeTuple))
	const self = setmetatable({.class
		_context=vContext,
		_manager=vContext:getTypeManager(),
		_list=vTermList,
		_tail=vTail,
		_typeTuple=vTypeTuple,
	}, TermTuple)
	return self
end

function TermTuple:select(vContext:clazz.Context, i:Integer):Ret(clazz.FixedTermTuple)
	const nList:List(clazz.RefineTerm) = {}
	for n=i,#self._list do
		nList[#nList + 1] = self._list[n]
	end
	return self._context:FixedTermTuple(nList, self:getRepeatType())
end

function TermTuple:rawget(i:Number):Ret(OrNil(clazz.RefineTerm))
	return self._list[i]
end

function TermTuple:get(vContext:clazz.Context, i:Number):Ret(clazz.RefineTerm)
	const more = i - #self
	if more <= 0 then
		return self._list[i]!
	else
		const nTail = self._tail
		if nTail then
			return nTail:get(vContext, more)
		else
			return self._manager:RefineTerm(self._manager.type.Nil)
		end
	end
end

function TermTuple:getContext():Ret(clazz.Context)
	return self._context
end

function TermTuple:checkTypeTuple():Ret(clazz.UTypeTuple)
	local nTypeTuple = self._typeTuple
	if not nTypeTuple then
		const nList:List(clazz.UAllType) = {}
		for i,v in ipairs(self._list) do
			nList[i] = v:getType()
		end
		nTypeTuple = self._manager:TypeTuple(self._context:getNode(), table.unpack(nList))
		const nTail = self._tail
		if nTail then
			nTypeTuple = nTypeTuple:Dots(nTail:getRepeatType())
		end
		self._typeTuple = nTypeTuple
		return nTypeTuple
	else
		return nTypeTuple
	end
end

function TermTuple:getTail():Ret(OrFalse(clazz.DotsTail))
	return self._tail
end

function TermTuple:getRepeatType():Ret(OrFalse(clazz.UAllType))
	const nTail = self._tail
	if nTail then
		return nTail:getRepeatType()
	else
		return false
	end
end

function.open TermTuple.is(t):isguard(clazz.FixedTermTuple)
	return getmetatable(t) == TermTuple
end

return TermTuple
