
const OPER_ENUM = require "thlua.type.OPER_ENUM"
const TYPE_BITS = require "thlua.type.TYPE_BITS"
const AtomTypeClass = require "thlua.type.AtomTypeClass"

const NumberLiteral = AtomTypeClass()

(@let.clazz = import("thlua.type.TypeClass").clazz)

function:class(clazz.NumberLiteral) NumberLiteral.new(vManager:clazz.TypeManager, vLiteral:Number):impl(clazz.IAtomType)
	const self = setmetatable({.class
		_manager=vManager,
		literal=vLiteral,
		id=vManager:genTypeId(),
		bits=TYPE_BITS.NUMBER,
	}, NumberLiteral)
	return self
end

function NumberLiteral:getLiteral():Ret(Number)
	return self.literal
end

function NumberLiteral:meta_uop_some(vContext, vOper)
	if vOper == "-" then
		return self._manager:Literal(-self.literal)
	elseif vOper == "~" then
		return self._manager:Literal(~self.literal)
	else
		return self._manager.type.Never
	end
end

function NumberLiteral:detailString(vCache, vVerbose)
	if vVerbose then
		return "Literal("..self.literal..")"
	else
		return tostring(self.literal)
	end
end

function NumberLiteral:assumeIntersectAtom(vAssumeSet, vType)
	if vType:assumeIncludeAtom(nil, self) then
		return self
	else
		return false
	end
end

function NumberLiteral:assumeIncludeAtom(vAssumeSet, vType)
	if vType == self then
		return self
	else
		return false
	end
end

function NumberLiteral:isSingleton()
	return true
end

function.open NumberLiteral.is(v):isguard(clazz.NumberLiteral)
	return getmetatable(v) == NumberLiteral
end

function NumberLiteral:isStrNumLiteral()
	return true
end

return NumberLiteral
